    <% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1 class="mb-5 text-center">All Campgrounds</h1>
    <% for (let cg of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (cg.image.length) { %> 
                    <img class="img-fluid" alt="" src="<%= cg.image %>">
                    <% } else { %>
                    <img class="img-fluid" alt="" src="https://images.unsplash.com/photo-1500498036565-cdf5d84e5393?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwyOTM1Mzl8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NDU5MjIyNTc&ixlib=rb-1.2.1&q=80&w=400">
                    <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= cg.title %> </h5>
                        <p class="card-text"><%= cg.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= cg.location %> </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= cg._id %>">View <%= cg.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
    </script>
    <script src="/js/clusterMap.js"></script>
    
